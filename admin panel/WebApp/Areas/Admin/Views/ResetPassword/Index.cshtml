@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Areas/Admin/Views/Shared/_BeforeLayout.cshtml";
}
<div ng-controller="ctrResetPassword" class="wrapper">

    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">


                    <div class="card shadow mb-12">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Reset Password</h6>
                        </div>
                        @{
                            if (@ViewBag.IsActive)
                            {
                            <div class="card-body">
                                <form>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 ">
                                            <label for="exampleFormControlInput1">New Password</label>
                                            <input type="password" class="form-control" autocomplete="off" ng-model="ctrResetPassword.NewPassword" required password autofocus ngmessage="Please enter the  New Password">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 ">
                                            <label for="exampleFormControlInput1">confirm Password</label>
                                            <input type="password" class="form-control" autocomplete="off" ng-model="ctrResetPassword.ConfirmPassword" required password autofocus ngmessage="Please enter the Confirm Password">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <hr class="style1">
                            <div style="margin-top: 10px" class="form-group">
                                <!-- Button -->
                                <div class="col-sm-12 controls">
                                    <button id="btn-Save" class="btn btn-primary" ng-click="ChangePassword()">Reset Password</button>
                                </div>
                            </div>
                            }
                            else
                            {
                            <div class="card-body">

                                expired...
                            </div>
                            
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    app.controller("ctrResetPassword", ['$scope', '$http', '$q', '$interval', function ($scope, $http, $q, $interval) {
        $scope.ctrResetPassword = {};

        $scope.ctrResetPassword.NewPassword = "";
        $scope.ctrResetPassword.ConfirmPassword = "";

        $scope.ChangePassword = function () {

            if (!ValidateRequired("password")) {
                return;
            }

            if ($scope.ctrResetPassword.NewPassword != $scope.ctrResetPassword.ConfirmPassword) {
                alert("Password Not Matched");
                return
            }

            var obj = {};
            obj.User_Id = '@ViewBag.User_Id';
            obj.NewPassword = $scope.ctrResetPassword.NewPassword;
            $scope.myPromise = $http.post('@Url.Action("SaveUpdate_ResetPassword", "ResetPassword")', obj).then(
                          function (response) {
                              if (response.data.aaData == 1) {
                                  setTimeout(window.location.href = "@Url.Action("Index", "Login")", 2000)

                              }
                              else {
                                  alert("Please try again...")
                              }
                          },
                          function (err) {
                              var error = err;
                          });
        }

    }]);

</script>

