@{
    ViewBag.Title = "City Form";
    Layout = "~/Areas/Admin/Views/Shared/_AfterLayout.cshtml";
}

<div ng-controller="ctrCityForm" class="wrapper">
    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <div class="row">
                <div class="col-lg-5 col-md-5 ">
                    <label class="m-0 font-weight-bold text-primary">City List </label>
                </div>
                <div class="col-lg-4 col-md-4 ">
                </div>
                <div class="col-lg-3 col-md-3 ">
                    <div style="text-align: right;">
                        @{
                            if (WebApp.Utility.SessionFacade.AdminUserSession.userroleid == 1)
                            {
                                <a href="@Url.Action("CityForm", "City")" class="btn btn-primary"><i class="far fa-plus-square"></i>Add New</a>
                            }
                        }
                    </div>
                </div>
            </div>

        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" datatable="ng" dt-options="dtOptions" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>City</th>
                            <th>State</th>
                            <th>Country</th>
                            <th>Active</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in CityList">
                            <td>{{item.cityname}}</td>
                            <td>{{item.statename}}</td>
                            <td>{{item.countryname}}</td>
                            <td>
                                <input type="checkbox" ng-model="item.isactive" disabled />
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a type="button" class="btn btn-primary btn-rounded" href="@Url.Action("cityForm", "city")?id={{item.cityid}}">
                                        <i class="far fa-eye"></i>
                                    </a>@{
                                        if (WebApp.Utility.SessionFacade.AdminUserSession.userroleid == 1)
                                        {
                                            <button type="button" class="btn btn-primary btn-rounded" ng-click="Deletecity(item,$index,true)">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    app.controller("ctrCityForm", function ($scope, $http, $q, $interval, $window, $ngConfirm, DTOptionsBuilder, DTColumnBuilder) {

        $scope.ctrCityForm = {};
        $scope.dtOptions = DTOptionsBuilder.newOptions()
        // .withDisplayLength(8)
          .withOption('order', [0, 'asc'])
          .withOption('searching', true)
          .withOption('lengthChange', true)
          .withOption('bInfo', false)
          .withOption('paging', true);


        $scope.getCityList = function () {
            var obj = {};
            obj.Search = "";
            $http.post('@Url.Action("Get_city_List", "City")', obj).then(
                           function (response) {
                               $scope.CityList = response.data.aaData;
                           },
                           function (err) {
                               var error = err;
                           });
        }
        $scope.getCityList();


        $scope.Deletecity = function (objCity, index, Delete) {

            $ngConfirm({
                title: 'Are you want to Confirm?',
                content: 'Do you want to delete: ' + objCity.cityname,
                autoClose: 'cancel|8000',
                buttons: {
                    deleteUser: {
                        text: 'ok',
                        btnClass: 'btn btn-primary',
                        action: function () {
                            var obj = {};
                            obj.ct = objCity;
                            obj.isDelete = Delete;
                            if (objCity.cityid > 0) {
                                $http.post('@Url.Action("SaveUpdate_Delete_City", "city")', obj).then(
                                     function (response) {
                                         if (response.data.aaData == 3) {
                                             showSuccessToast("Data Deleted Sucessfully");
                                             $scope.CityList.splice(index, 1);
                                         }
                                         else if (response.data.aaData == -1) {
                                             showWarningToast("Something went wrong.Please Try Again..")
                                         } else {
                                             showWarningToast("Something went wrong.Please Try Again..")
                                         };
                                     },
                                     function (err) {
                                         var error = err;
                                     });
                            } else {
                                $scope.CityList.splice(index, 1);
                                showSuccessToast("Data Deleted Sucessfully");
                            }

                        }
                    },
                    cancel: function () {
                        // $ngConfirm('action is canceled');
                    }
                }
            });

        }

    });

</script>
