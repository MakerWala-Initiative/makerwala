@{
    ViewBag.Title = "Type Form";
    Layout = "~/Areas/Admin/Views/Shared/_AfterLayout.cshtml";
}

<div ng-controller="ctrTypeForm" class="wrapper">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-lg-5 col-md-5 ">
                    <label class="m-0 font-weight-bold text-primary">Type List</label>
                </div>
                <div class="col-lg-4 col-md-4 ">
                </div>
                <div class="col-lg-3 col-md-3 ">
                    <div style="text-align: right;">
                        @{
                            if (WebApp.Utility.SessionFacade.AdminUserSession.userroleid == 1)
                            {
                                <a href="@Url.Action("TypeForm", "Type")" class="btn btn-primary"><i class="far fa-plus-square"></i>Add New</a>
                            }
                        }
                    </div>
                </div>

            </div>

        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" datatable="ng" dt-options="dtOptions" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Active</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                        <tr ng-repeat="item in TypeList">
                            <td>{{item.typename}}</td>
                            <td>
                                <input type="checkbox" disabled ng-model="item.isactive">
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a type="button" class="btn btn-primary btn-rounded" href="@Url.Action("TypeForm", "Type")?id={{item.typeid}}">
                                        <i class="far fa-eye"></i>
                                    </a>    @{
                                        if (WebApp.Utility.SessionFacade.AdminUserSession.userroleid == 1)
                                        {
                                            <button type="button" class="btn btn-primary btn-rounded" ng-click="DeleteType(item,$index,true)">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>

        </div>



    </div>
</div>

<script>
    app.controller("ctrTypeForm", function ($scope, $http, $q, $interval, $window, $ngConfirm, DTOptionsBuilder, DTColumnBuilder) {

        $scope.ctrTypeForm = {};
        $scope.dtOptions = DTOptionsBuilder.newOptions()
          // .withDisplayLength(8)
           .withOption('order', [0, 'asc'])
           .withOption('searching', true)
           .withOption('lengthChange', true)
           .withOption('bInfo', false)
           .withOption('paging', true);

        $scope.getClusterList = function () {
            var obj = {};
            obj.Search = "";
            $http.post('@Url.Action("Get_Type_List", "Type")', obj).then(
                           function (response) {
                               $scope.TypeList = response.data.aaData;
                           },
                           function (err) {
                               var error = err;
                           });
        }
        $scope.getClusterList();

        $scope.DeleteType = function (objtype, index, Delete) {

            $ngConfirm({
                title: 'Are you want to Confirm?',
                content: 'Do you want to delete: ' + objtype.typename,
                autoClose: 'cancel|8000',
                buttons: {
                    deleteUser: {
                        text: 'ok',
                        btnClass: 'btn btn-primary',
                        action: function () {
                            /**/
                            var obj = {};
                            obj.ty = objtype;
                            obj.isDelete = Delete;
                            if (objtype.typeid > 0) {
                                $http.post('@Url.Action("SaveUpdate_Delete_Type", "Type")', obj).then(
                         function (response) {
                             if (response.data.aaData == 3) {
                                 showSuccessToast("Data Deleted Sucessfully");
                                 $scope.TypeList.splice(index, 1);
                             } else if (response.data.aaData == -1) {
                                 showWarningToast("Something went wrong.Please Try Again..")
                             } else {
                                 showWarningToast("this Record used some other table.so can't delete this records")
                             };
                         },
                         function (err) {
                             var error = err;
                         });
            } else {
                $scope.TypeList.splice(index, 1);
                showSuccessToast("Data Deleted Sucessfully");
            }
                            /**/
                        }
                    },
                    cancel: function () {
                        return
                    }
                }
            });

        }

    });

</script>

