@{
    ViewBag.Title = "Cluster";
    Layout = "~/Areas/Admin/Views/Shared/_AfterLayout.cshtml";
}

<div ng-controller="ctrClusterForm" class="wrapper">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Cluster Details</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-lg-12 col-md-12 ">
                        <label for="exampleFormControlInput1">Name<lable style="color: red">&nbsp*</lable></label>
                        <input type="text" class="form-control" autocomplete="off" ng-model="ctrClusterForm.clustername" maxlength="50" required cluster autofocus ngmessage="Please enter the cluster Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Remark </label>
                    <textarea class="form-control" rows="3" autocomplete="off" ng-model="ctrClusterForm.remarks" required autofocus ngmessage="Please enter the remarks"></textarea>
                </div>

                <div class="form-check">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 ">
                            <input type="checkbox" class="form-check-input" ng-model="ctrClusterForm.isactive">
                            <label class="form-check-label" for="exampleCheck1">Is Active</label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <hr class="style1">
        <div style="margin-top: 10px" class="form-group">
            <div class="col-sm-12 controls">
                <button id="btn-Save" class="btn btn-primary" ng-click="SaveUpdateDeleteCluster(false)">Save</button>
                <a id="btn-cancel" class="btn btn-secondary" href="@Url.Action("index", "Cluster")">Cancel</a>
            </div>
        </div>
    </div>
</div>

<script>
    app.controller("ctrClusterForm", function ($scope, $http, $q, $interval, $window, DTOptionsBuilder, DTColumnBuilder) {

        $scope.ctrClusterForm = {};
        $scope.ctrClusterForm.isactive = true;

        var stid = parseInt(getQueryStringValue("id") != "" ? getQueryStringValue("id") : "0");
        if (stid > 0) {
            $scope.getClusterList = function () {
                var obj = {};
                obj.Search = "";

                $http.post('@Url.Action("Get_Cluster_List", "Cluster")', obj).then(
                                        function (response) {

                                            $scope.ctrClusterForm = _.where(response.data.aaData, { clusterid: stid })[0];
                                        },
                                        function (err) {
                                            var error = err;
                                        });
            }
            $scope.getClusterList();
        }

        $scope.SaveUpdateDeleteCluster = function (Delete) {
            if (!ValidateRequired("cluster")) {
                return;
            }
            var obj = {};
            obj.cl = $scope.ctrClusterForm;
            obj.isDelete = Delete;

            $http.post('@Url.Action("SaveUpdate_Delete_Cluster", "Cluster")', obj).then(
                           function (response) {
                               if (response.data.aaData == 1 ) {
                                   showSuccessToast("Data Saved Sucessfully");
                                   setTimeout(window.location.href = "@Url.Action("Index", "Cluster")", 1000)
                               } else if (response.data.aaData == 2) {
                                   showInfoToast("Already exist Cluster Name...");
                               }
                               else {
                                   showWarningToast("Something went wrong.Please Try Again..")
                               };
                           },
                           function (err) {
                               var error = err;
                           });
        }

    });

</script>
