@{
    ViewBag.Title = "Video List";
    Layout = "~/Areas/Admin/Views/Shared/_AfterLayout.cshtml";
}

<div ng-controller="ctrUploadVideo">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-lg-5 col-md-5 ">
                    <label class="m-0 font-weight-bold text-primary">Video List</label>
                </div>
                <div class="col-lg-4 col-md-4 ">
                </div>
                <div class="col-lg-3 col-md-3 ">
                    <div style="text-align: right;">
                        <a href="@Url.Action("Uploadform", "UploadVideo")" class="btn btn-primary"><i class="far fa-plus-square"></i>Add New</a>
                        @*@{
                            if (WebApp.Utility.SessionFacade.AdminUserSession.userroleid == 1)
                            {
                                <a href="@Url.Action("Uploadform", "UploadVideo")" class="btn btn-primary"><i class="far fa-plus-square"></i>Add New</a>
                            }
                        }*@
                    </div>
                </div>

            </div>


        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" datatable="ng" dt-options="dtOptions" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Title</th>
                            <th>Teacher</th>
                            <th>Class</th>
                            <th>Subject</th>
                            <th>Video Link</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in UploadVideoList">
                            <td>{{item.videodate|mydate | date: 'dd-MMM-yyyy'}}</td>
                            <td>{{item.videotitle}}</td>
                            <td>{{item.teacherfirstname}} {{item.teacherlastname}}</td>
                            <td>{{item.classlevelname}}</td>
                            <td>{{item.subjectname}}</td>
                            <td>
                                <a type="button" class="btn btn-primary btn-rounded" ng-click="openwindow(item)">
                                    <i class="far fa-eye"></i>

                                </a>

                            </td>

                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a type="button" class="btn btn-primary btn-rounded" href="@Url.Action("Uploadform", "UploadVideo")?id={{item.videoid}}">
                                        <i class="far fa-eye"></i>
                                    </a>
                                    @{
                                        if (WebApp.Utility.SessionFacade.AdminUserSession.userroleid == 1)
                                        {
                                        <button type="button" class="btn btn-primary btn-rounded" ng-click="DeleteUploadVideo(item,$index,true)">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                @Html.Partial("~/Areas/Admin/Views/Shared/_Pagination.cshtml")
            </div>

        </div>
    </div>
</div>


<script>
    app.controller("ctrUploadVideo", function ($scope, $http, $q, $interval, $window, $ngConfirm, $filter, DTOptionsBuilder, DTColumnBuilder) {


        $scope.ctrUploadVideo = {}

        $scope.maxSize = 10;
        $scope.totalCount = 0;
        $scope.pageIndex = 1;
        $scope.pageSizeSelected = 10;

        $scope.dtOptions = DTOptionsBuilder.newOptions()
       // .withDisplayLength(8)
         .withOption('destroy', true)        .withOption('order', [0, 'desc'])
        .withOption('searching', true)
        .withOption('lengthChange', false)
        .withOption('bInfo', false)
        .withOption('paging', false);



        $scope.getUploadVideoList = function () {
            var obj = {};
            obj.Search = "";
            obj.pageIndex = $scope.pageIndex - 1;
            obj.PageSize = $scope.maxSize;

            $http.post('@Url.Action("Get_UploadVideo_List", "UploadVideo")', obj).then(
                           function (response) {
                               debugger
                               $scope.UploadVideoList = response.data.aaData;
                               $scope.totalCount = response.data.totalRecords;
                           },
                           function (err) {
                               var error = err;
                           });
        }
        $scope.getUploadVideoList();

        $scope.DeleteUploadVideo = function (objUploadVideo, index, Delete) {
            $ngConfirm({
                title: 'Are you want to Confirm?',
                content: 'Do you want to delete: ' + objUploadVideo.videotitle,
                autoClose: 'cancel|8000',
                buttons: {
                    deleteUser: {
                        text: 'ok',
                        btnClass: 'btn btn-primary',
                        action: function () {
                            /**/
                            objUploadVideo.videodate = $filter('date')(parseInt(objUploadVideo.videodate.substr(6)), 'dd-MMM-yyyy');

                            var obj = {};
                            obj.vd = objUploadVideo;
                            obj.isDelete = Delete;
                            if (objUploadVideo.videoid > 0) {
                                $http.post('@Url.Action("SaveUpdate_Delete_UploadVideo", "UploadVideo")', obj).then(
                                             function (response) {
                                                 if (response.data.aaData == 3) {
                                                     showSuccessToast("Data Deleted Sucessfully");
                                                     $scope.UploadVideoList.splice(index, 1);
                                                 } else if (response.data.aaData == -1) {
                                                     showWarningToast("Something went wrong.Please Try Again..")
                                                 } else {
                                                     showWarningToast("this Record used some other table.so can't delete this records")
                                                 };
                                             },
                                             function (err) {
                                                 var error = err;
                                             });
                            } else {
                                $scope.UploadVideoList.splice(index, 1);
                                showSuccessToast("Data Deleted Sucessfully");
                            }
                            /**/
                        }
                    },
                    cancel: function () {
                        return
                    }
                }
            });


        }

        $scope.pageChanged = function (pageIndex) {
            $scope.pageIndex = pageIndex;
            $scope.getUploadVideoList();
        };


        $scope.openwindow = function (item) {
            var url = '';
            if (!/^http[s]?:\/\//.test(item.youtubelink)) {
                url += 'http://';
            }

            url += item.youtubelink;
            window.open(url, '_blank');
        }


    });

</script>

