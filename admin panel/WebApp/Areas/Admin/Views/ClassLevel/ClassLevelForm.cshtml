@{
    ViewBag.Title = "Class Level";
    Layout = "~/Areas/Admin/Views/Shared/_AfterLayout.cshtml";
}

<div ng-controller="ctrClassLevelForm" class="wrapper">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Class Level Details</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-lg-12 col-md-12 ">
                        <label for="exampleFormControlInput1">Name<lable style="color: red">&nbsp*</lable></label>
                        <input type="text" class="form-control" autocomplete="off" ng-model="ctrClassLevelForm.classlevelname" maxlength="50" required classlevel autofocus ngmessage="Please enter the Class Name">
                    </div>
                </div>
                @* <div class="row">
                    <div class="col-lg-6 col-md-6 ">
                        <label for="exampleFormControlSelect1">Class Level</label>
                        <select ng-model="ClassLevel.CityId" autocomplete="off" ng-options="x.CT_ID as x.CT_NAME for x in CityList" class="form-control" required autofocus ngmessage="Please select City">
                        </select>
                    </div>
                </div>*@
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Remark </label>
                    <textarea class="form-control" rows="3" autocomplete="off" ng-model="ctrClassLevelForm.remarks" required autofocus ngmessage="Please enter the remark"></textarea>
                </div>

                <div class="form-check">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 ">
                            <input type="checkbox" class="form-check-input" ng-model="ctrClassLevelForm.isactive">
                            <label class="form-check-label" for="exampleCheck1">Is Active</label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <hr class="style1">
        <div style="margin-top: 10px" class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
                <button id="btn-Save" class="btn btn-primary" ng-click="SaveUpdateDeleteClasslevel(false)">Save</button>
                <a id="btn-cancel" class="btn btn-secondary" href="@Url.Action("index", "ClassLevel")">Cancel</a>
            </div>
        </div>
    </div>
</div>

<script>
    app.controller("ctrClassLevelForm", function ($scope, $http, $q, $interval, $window, DTOptionsBuilder, DTColumnBuilder) {

        $scope.ctrClassLevelForm = {};

        $scope.ctrClassLevelForm.isactive = true;

        var stid = parseInt(getQueryStringValue("id") != "" ? getQueryStringValue("id") : "0");
        if (stid > 0) {
            $scope.getClasslevelList = function () {
                var obj = {};
                obj.Search = "";
                $http.post('@Url.Action("Get_Class_List", "ClassLevel")', obj).then(
                               function (response) {

                                   $scope.ctrClassLevelForm = _.where(response.data.aaData, { classid: stid })[0];
                               },
                               function (err) {
                                   var error = err;
                               });
            }
            $scope.getClasslevelList();
        }

        $scope.SaveUpdateDeleteClasslevel = function (Delete) {
            if (!ValidateRequired("classlevel")) {
                return;
            }
            var obj = {};
            obj.cl = $scope.ctrClassLevelForm;
            obj.isDelete = Delete;

            $http.post('@Url.Action("SaveUpdate_Delete_Class", "ClassLevel")', obj).then(
                           function (response) {
                               debugger
                               if (response.data.aaData == 1) {
                                   showSuccessToast("Data Saved Sucessfully");
                                   setTimeout(window.location.href = "@Url.Action("Index", "ClassLevel")", 1000)
                               } else if (response.data.aaData == 2) {
                                   showInfoToast("Already exist Class Name...");
                               }
                               else {
                                   showWarningToast("Something went wrong.Please Try Again..")
                               };

                           },
                           function (err) {
                               var error = err;
                           });

        }

    });

</script>
