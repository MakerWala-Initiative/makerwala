<script>
    app.controller("ctrUser", function ($scope, $http, $q, $interval, $window, $compile, DTOptionsBuilder, DTColumnBuilder) {
        $scope.ctrUser = {}
        $scope.maxSize = 10;
        $scope.totalCount = 0;
        $scope.pageIndex = 1;
        $scope.pageSizeSelected = 10;


        $scope.dtOptions = DTOptionsBuilder.newOptions()
            .withOption('order', [0, 'asc'])
            .withOption('lengthChange', false)
            .withOption('bInfo', false)
        //.withOption('paging', false)
        //  .withOption('processing', true)
       .withOption('serverSide', true)
        ;

        $scope.getUserList = function () {
            var obj = {};
            obj.pageIndex = $scope.pageIndex;
            if ($scope.ctrUser.Search != null) {
                obj.Search = " and GU.UserNm like '%" + $scope.ctrUser.Search + "%'";
            } else {
                obj.Search = "";
            }

            $http.post('@Url.Action("Get_User_List", "User")', obj).then(
                           function (response) {

                               $scope.UserList = response.data.aaData;

                               $scope.totalCount = response.data.totalRecords;
                           },
                           function (err) {
                               var error = err;
                           });
        }


        $scope.getUserList();


        // $scope.dtOptions = DTOptionsBuilder.newOptions()
        //    .withOption('order', [0, 'asc']);



        $scope.DeleteUser = function (obj, Isdelete) {
            var obj = {
                CM: obj,
                IsDelete: Isdelete
            };

            debugger
            if ($window.confirm("Do you want to delete: " + obj.CM.FirstNm) == false) {
                return
            }

            $http.post('@Url.Action("SaveUpdateDeleteUser", "User")', obj).then(
                                      function (response) {
                                          if (response.data.aaData == 1 && Isdelete) {
                                              showSuccessToast("Data Deleted Sucessfully");
                                              $scope.getUserList();
                                          }
                                      },
                                      function (err) {
                                          var error = err;
                                      });

        }

        $scope.toDatetable = function () {
            $scope.pageData = {
                total: 0,
            };

            // this function used to get all leads
            var get = function (sSource, aoData, fnCallback, oSettings) {
                var draw = aoData[0].value;
                var order = aoData[2].value;
                var start = aoData[3].value;
                var length = aoData[4].value;

                debugger
                var params = {
                    start: start,
                    limit: length,
                }

                var obj = {};
                obj.pageIndex = $scope.pageIndex;
                if ($scope.ctrUser.Search != null) {
                    obj.Search = " and GU.UserNm like '%" + $scope.ctrUser.Search + "%'";
                } else {
                    obj.Search = "";
                }
                $http.post('@Url.Action("Get_User_List", "User")', obj).then(
                           function (response) {

                               var records = {
                                   'draw': 0,
                                   'recordsTotal': 0,
                                   'recordsFiltered': 0,
                                   'data': []
                               };
                               if (response.data.aaData) {
                                   records = {
                                       'draw': draw,
                                       'recordsTotal':500,
                                       'recordsFiltered':500,
                                       'data': response.data.aaData
                                   };
                               }
                               $scope.pageData.total = 500;
                               fnCallback(records);

                           },
                           function (err) {
                               var error = err;
                           });


            }

            function rowCallback(nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $compile(nRow)($scope);
            }

            $scope.dtOptions = DTOptionsBuilder.newOptions()
                .withFnServerData(get) // method name server call
                .withDataProp('data')// parameter name of list use in getLeads Fuction
                .withOption('processing', true) // required
                .withOption('serverSide', true)// required
                .withOption('paging', true)// required
                .withPaginationType('full_numbers')
                .withDisplayLength(10)
                .withOption('rowCallback', rowCallback)
                 .withDOM('lrtip');

            $scope.dtColumns = [
              DTColumnBuilder.newColumn('FirstNm', 'First name').withOption('defaultContent', ""),
              DTColumnBuilder.newColumn('LastNm', 'Last name').withOption('defaultContent', ""),
              DTColumnBuilder.newColumn('UserNm', 'User Nm').withOption('defaultContent', ""),
            ];

            // function ends

        }

        $scope.toDatetable();








        $scope.pageChanged = function (pageIndex) {
            $scope.pageIndex = pageIndex;
            $scope.getUserList();
        };

    });

</script>


