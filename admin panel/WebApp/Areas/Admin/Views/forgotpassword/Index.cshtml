@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Areas/Admin/Views/Shared/_BeforeLayout.cshtml";
}
<style>
    .bg-login-image {
        background: url(/Areas/Admin/Content/img/logo.jpg);
        background-position: center;
        background-size: cover;
    }
</style>
<div class="container wrapper" ng-controller="ctrForgotPassword">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <br />
                                    <br />
                                    <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                                    @*<p class="mb-4">We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!</p>*@
                                    <br />
                                    <br />
                                </div>
                                <form class="user">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user" ng-model="ctrForgotPassword.email" placeholder="Enter Email Address..." required forgotpassword autofocus ngmessage="Please enter the emailaddress">
                                    </div>
                                    <button ng-click="forgotPassword()" class="btn btn-primary btn-user btn-block">Reset Password
                                    </button>
                                </form>
                                <hr>
                                @* <div class="text-center">
                                    <a class="small" href="register.html">Create an Account!</a>
                                </div>*@
                                <div class="text-center">
                                    <a class="small" href="~/">Already have an account? Login!</a>
                                </div>
                                <br />
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

<script>
    app.controller("ctrForgotPassword", function ($scope, $http, $q, $interval, $window, $ngConfirm, DTOptionsBuilder, DTColumnBuilder) {

        $scope.ctrForgotPassword = {};

        $scope.forgotPassword = function () {

            if (!ValidateRequired("forgotpassword")) {
                return;
            }

            var obj = {};
            obj.username = $scope.ctrForgotPassword.email;
            $http.post('@Url.Action("forgot_Password", "forgotpassword")', obj).then(
                               function (response) {
                                   if (response.data.aaData == 1) {
                                       showSuccessToast("Please check your mail..");
                                       setTimeout(window.location.href = "/", 3000)
                     
                                   } else {
                                       showWarningToast("this Record used some other table.so can't delete this records")
                                   };
                               },
                               function (err) {
                                   var error = err;
                               });
        }


    });

</script>
