<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              tools:context=".activities.LoginActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayLight">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="35dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="30dp"
                    android:contentDescription="@string/str_login"
                    android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tvLoginWithGoogle"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/login_with_google_button_background"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/str_login_with_google"
                        android:textAllCaps="false"
                        android:textColor="@color/colorOrange"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/tvLoginWithUser"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/login_with_user_button_background"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/str_login_with_otp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                <EditText
                        android:id="@+id/etEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/round_white_edittext_background"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="@string/str_email_address"
                        android:imeOptions="actionNext"
                        android:maxLength="50"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGray"
                        android:textSize="14sp"/>

                <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/round_white_edittext_background"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="@string/str_password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGray"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/str_forgot_password_question"
                        android:textColor="@color/colorGray"
                        android:textSize="14sp"/>

                <Button
                        android:id="@+id/btnUserLogin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/round_theme_background"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/str_login"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llOTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                <EditText
                        android:id="@+id/etMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/round_white_edittext_background"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:hint="@string/str_mobile_number"
                        android:maxLength="10"
                        android:imeOptions="actionNext"
                        android:inputType="phone|number"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGray"
                        android:textSize="14sp"/>

                <Button
                        android:id="@+id/btnSendOTP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/round_theme_background"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/str_send_otp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"/>

                <LinearLayout
                        android:id="@+id/llOTPVerifySection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                    <EditText
                            android:id="@+id/etOTP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/round_white_edittext_background"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:hint="@string/str_enter_otp"
                            android:imeOptions="actionNext"
                            android:inputType="phone|number"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorGray"
                            android:textSize="14sp"/>

                    <Button
                            android:id="@+id/btnOTPLogin"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/round_theme_background"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/str_verify_otp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_white_background"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/str_new_user_sign_up"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>